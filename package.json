{
  "name": "openspec-flow",
  "version": "0.1.1-alpha",
  "description": "OpenSpec change management with Claude-Flow automation - AI-powered specification-driven development workflows",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openspec-flow": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./commands/*": {
      "import": "./dist/commands/*.js",
      "types": "./dist/commands/*.d.ts"
    },
    "./utils/*": {
      "import": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    }
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"No tests yet\"",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch"
  },
  "keywords": [
    "openspec",
    "claude",
    "claude-code",
    "claude-flow",
    "ai",
    "automation",
    "specification",
    "change-management",
    "development-workflow",
    "mcp",
    "swarm",
    "multi-agent"
  ],
  "author": "Scott Wilkos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottwilkos/openspec-flow.git"
  },
  "homepage": "https://github.com/scottwilkos/openspec-flow#readme",
  "bugs": {
    "url": "https://github.com/scottwilkos/openspec-flow/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "openspec": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "openspec": {
      "optional": true
    }
  }
}
